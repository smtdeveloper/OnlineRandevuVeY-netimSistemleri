@model Entities.DTOs.Auth.UserDto

@{
    ViewData["Title"] = "Kullanıcı Detayı";
}

<h2 class="text-center my-4">@ViewData["Title"]</h2>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-person-circle"></i> Kullanıcı Bilgileri</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Id</dt>
            <dd class="col-sm-8">@Model.Id</dd>

            <dt class="col-sm-4">Kullanıcı Adı</dt>
            <dd class="col-sm-8">@Model.UserName</dd>

            <dt class="col-sm-4">Oluşturulma Tarihi</dt>
            <dd class="col-sm-8">@Model.CreatedDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-4">Roller</dt>
            <dd class="col-sm-8">
                @if (Model.Roles != null && Model.Roles.Any())
                {
                    <ul>
                        @foreach (var role in Model.Roles)
                        {
                            <li>@role</li>
                        }
                    </ul>
                }
                else
                {
                    <span>Rol atanmadı.</span>
                }
            </dd>

        </dl>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Geri
        </a>
        <div>
            <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Güncelle
            </a>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">
                    <i class="bi bi-trash"></i> Sil
                </button>
            </form>
        </div>
    </div>
</div>
